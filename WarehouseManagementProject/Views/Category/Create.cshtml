@model Category



<div id="header">
    <h2 class="text-dark py-2">CREATE CATEGORY</h2>
</div>
<div class="p-4">
    <form method="post" class="row">
        <div class="border p-3">
            <div class="form-floating py-2 col-12">
                <input asp-for="CategoryName" class="form-control border-0 shadow" />
                <label asp-for="CategoryName" class="ms-2"></label>
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Description" class="form-control border-0 shadow" />
                <label asp-for="Description" class="ms-2"></label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="row pt-3">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-dark form-control">Create</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-white btn-outline border form-control">
                        Back To List
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>




@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}